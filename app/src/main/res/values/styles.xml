<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wanxiang_color</item>
        <item name="colorPrimaryDark">@color/wanxiang_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:background">@drawable/img_launcher</item>
    </style>

    <style name="text_logo">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_category">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
